{
	"compilerOptions": {
        "types": ["@sveltejs/kit"],
		"paths": {
			"$lib": [
				"./components"
			],
			"$lib/*": [
				"./components/*"
			]
		},
		"rootDirs": ["."],
		"importsNotUsedAsValues": "error",
		"isolatedModules": true,
		"preserveValueImports": true,
		"lib": [
			"esnext",
			"DOM",
			"DOM.Iterable"
		],
		"moduleResolution": "node",
		"module": "esnext",
		"target": "esnext"
	},
	"include": [
		"./vite.config.ts",
		"./components/**/*.ts",
		"./components/**/*.js",
		"./components/**/*.svelte",
        "./pages/**/*.ts",
		"./pages/**/*.js",
		"./pages/**/*.svelte"
	],
	"exclude": [
		"./node_modules/**",
		"./src/service-worker.js",
		"./src/service-worker.ts",
		"./src/service-worker.d.ts"
	]
}
