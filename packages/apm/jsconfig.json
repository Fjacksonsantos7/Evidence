{   
    "exclude": ["./**/*.spec.js", "./types", "./src/lib/tests"],
    "include": ["./index.js"],
    "compilerOptions": {
        "declarationMap": true,
        "declarationDir": "./types",
        "rootDir": ".",
        "baseUrl": ".",
        "outDir": "dist",
        "target": "es2022",
        "lib": ["es2022", "DOM"],
        "allowJs": true,
        "checkJs": true,
        "declaration": true,
        "esModuleInterop": true,
        "strict": true,
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "isolatedModules": true,
        "skipLibCheck": true,
        "emitDeclarationOnly": true,
        "noEmit": false
    }
}
